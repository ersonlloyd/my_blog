= simple_form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@article.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li
            = msg
  .form-group
    / = f.input :title, as: :ckeditor, class: "form-control"
    = f.label :title
    = f.text_field :title, class: "form-control"
  .form-group
    = f.input :article_details, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control"
  .form-group
    = f.button :submit
