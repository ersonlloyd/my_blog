= simple_form_for @comment, url:create_comment_article_path, method: :put do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@comment.errors.count,"error")} prohibited this post from being saved:"
      %ul
        - @comment.errors.full_message.each do |msg|
          %li
            = msg
  .form-group
    = f.text_area :message #, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'SIMPLE'}}, class: "form-control"
  .form-group
    = f.button :submit
