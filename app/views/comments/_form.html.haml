
= simple_form_for @comment, url:create_comment_article_path, method: :put, remote: true do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@comment.errors.count,"error")} prohibited this post from being saved:"
      %ul
        - @comment.errors.full_message.each do |msg|
          %li
            = msg
  .container.create-comment.col-sm-12{role: 'request-comment'}
    .form-group
      = f.text_area :message, id: "comment"
      = f.button :submit , class: "btn btn-sm btn-default", role: 'submit-comment'