.col-sm-5
  .login
    %h1 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: "form-control form-group-lg col-xs-8"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off" , class: "form-control form-group-lg col-xs-4"
      - if devise_mapping.rememberable?
        .field.left
          = f.check_box :remember_me, class: "chkbox"
          = f.label :remember_me, class: "chklabel"
      .actions
        = f.submit "Log in" , class: "login-button"
    = render "devise/shared/links"
